@page
@model Loja.Web.Pages.Produtos.IndexModel

<h1>@Model.Titulo</h1>
<p>Todos os produtos da nossa Loja</p>
<div class="row">
    @foreach (var produto in Model.Produtos)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@produto.ThumbUrl" alt="@produto.Nome"/>
                <div class="caption">
                    <h3 class="pull-right">@produto.Valor.ToString("c")</h3>
                    <h3>
                        @produto.Nome
                    </h3>
                    <p>@produto.Descricao</p>
                </div>
            </div>
        </div>
    }
</div>

